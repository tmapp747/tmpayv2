[[workflows.workflow]]
name = "Development Server"
author = 31747875
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Kill any existing process on port 5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5000\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Install dependencies first"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Start development server with proper host binding"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "HOST=0.0.0.0 npm run dev"

[[workflows.workflow]]
name = "Test Mode"
author = 31747875
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Run tests"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "# Start server in test mode"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=test npm run dev"

